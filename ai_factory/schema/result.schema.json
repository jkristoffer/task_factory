{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["status", "tests", "must_fix", "summary", "files_changed"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "failed"]
    },
    "tests": {
      "type": "object",
      "required": ["passed", "command", "output_snippet"],
      "properties": {
        "passed": { "type": "boolean" },
        "command": { "type": "string" },
        "output_snippet": { "type": "string" }
      },
      "additionalProperties": false
    },
    "must_fix": {
      "type": "array",
      "items": { "type": "string" }
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "files_changed": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
